{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://schema.retinue.app/roster/RosterUnit.json",
  "title": "RosterUnit",

  "additionalProperties": false,

  "definitions": {
    "UpgradeSet": {
      "description": "Upgrades attached to the unit.",
      "items": {
        "type": "string",
        "minLength": 3,
        "maxLength": 100
      },
      "minItems": 1
    }
  },

  "properties": {
    "name": {
      "description": "Name and sub-title, if any, of the selected unit.",
      "$comment": "Ambiguities expected to be resolved by the roster faction.",

      "type": "string",
      "minLength": 3,
      "maxLength": 300
    },

    "upgrades": {
      "$ref": "#/definitions/UpgradeSet"
    },

    "loadout": {
      "$ref": "#/definitions/UpgradeSet"
    }
  },

  "required": ["name"]
}
