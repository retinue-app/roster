{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://schema.retinue.app/roster/Roster.json",
  "title": "Roster",

  "description": "An army list.",
  "$comment": "https://images-cdn.fantasyflightgames.com/filer_public/bc/fe/bcfe31e1-c5f9-48e0-9245-1f0f3c9c93ee/swl_army_list.pdf",
  "additionalProperties": false,

  "properties": {
    "name": {
      "type": "string",
      "minLength": 3
    },

    "faction": {
      "$ref": "../../node_modules/@retinue/databank/schema/Faction.json"
    },

    "format": {
      "anyOf": [
        { "$ref": "./Format.json#/definitions/Official" },
        { "$ref": "./Format.json" }
      ]
    },

    "units": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "./RosterUnit.json"
      }
    }
  },

  "required": ["name", "faction", "format", "units"]
}
